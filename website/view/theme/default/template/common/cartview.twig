      
        <p class="cart-btn">
          <img src="images/cart-icon.png" alt="" class="cart-btn-pc">
          <span class="i-cart-txt">{{ text_items }}件商品</span>
          <div class="cart-list">
            <div class="cart-list-box">
              <div class="cart-list-have">
                <h1>我的購物車</h1>
                {% if cart is not empty %}
                  {% for product in cart %}
                  <div class="cart-list-have-columns clearfix">
                    <ul class="clearfix">
                      <li><img src="{{ product.image }}" alt=""></li>
                      <li>{{ product.name }}</li>
                      <li>{{ product.quantity }}包</li>
                      <li>{{ product.price }}</li>
                      <li><span class="cart-list-btn" onclick="cart.remove('{{ product.cart_id }}');" >X</span></li>
                    </ul>
                  </div>
                  {% endfor %}
                  <p class="cart-list-p">總價:{{ total }}</p>
                  <a href="{{ view_cart }}" class="cart-list-a">
                    <i class="fa fa-credit-card" aria-hidden="true"></i>前往結帳
                  </a>
                {% else %}
                <div class="cart-list-none">
                  <h1>您的購物車內無任何商品</h1>
                  <p class="cart-list-p">
                    <i class="fa fa-shopping-cart" aria-hidden="true"></i>
                      0件商品-NT:0
                  </p>
                  <a href="{{ product_category }}" class="cart-list-a">
                    前往商城購物
                  </a>
                </div> 
                {% endif %}
              </div>
            </div>    
          </div>          
        </p>
      