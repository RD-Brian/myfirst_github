{{ header }}
  <div class="warp">
    <div class="member">
      <div class="title">
        <img src="images/member-title.png" alt="" class="fadeInUp wow" data-wow-delay=".1s">
        <p class="new-title">
          <img src="images/member-img.png" alt="" class="fadeInUp wow" data-wow-delay=".3s">
        </p>
      </div>
      <div class="new-slide">
        <div class="slide-block">
          <img src="images/slide.png" alt="" class="slide-pc scroll-top fadeInUp wow" data-wow-delay=".5s">
          <img src="images/i-slide-bottom.svg" alt="" class="slide-mobile scroll-top">
          <p><img src="images/about-slide-before.png" alt="" class="fadeInUp wow" data-wow-delay=".7s"></p>         
        </div>
      </div>  
      <!--  -->
      <div class="member-container fadeInUp wow" data-wow-delay=".9s">
        <div class="member-title-btn">
          <p>MENU</p>
          <i class="fa fa-list-ul" aria-hidden="true"></i>
        </div>
        <div class="member-title">
          {% for k,menu in account_menu %}
            <a href="{{ menu.href }}"{% if k==2 %} class="member-title-active" {% endif %}>{{ menu.name }}</a>
          {% endfor %}
        </div>
        <form action="{{ action }}" method="post" enctype="multipart/form-data" class="form-horizontal">
          <div class="member-div clearfix">
            <div class="member-block password-block">
              <span>新密碼</span>
              <input type="password" name="password" value="{{ password }}" placeholder="{{ entry_password }}" id="input-password" class="member-input" />
              {% if error_password %}
                <div class="text-danger _password">{{ error_password }}</div>
              {% endif %}
            </div>
            <div class="member-block password-block">
              <span>確認密碼</span>
              <input type="password" name="confirm" value="{{ confirm }}" placeholder="{{ entry_confirm }}" id="input-confirm" class="member-input" />
              {% if error_confirm %}
                <div class="text-danger _password">{{ error_confirm }}</div>
              {% endif %}
            </div>
            <div class="member-block password-block">
              <span></span>
              <input type="submit" value="更改密碼" class="member-btn"/>
            </div>
          </div>
        </form>
      </div>
      <!--  -->
      <div class="new-slide-bottom clearfix">
        <p><img src="images/about-slide-before.png" alt="" class="fadeInUp wow" data-wow-delay=".1s"></p>
        <p><img src="images/member-img.png" alt="" class="fadeInUp wow" data-wow-delay=".2s"></p>
        <p>
          <img src="images/i-slide-bottom.png" alt="" class="scroll-bottom fadeInUp wow" data-wow-delay=".3s">
          <img src="images/i-slide-bottom.svg" alt="" class="slide-mobile scroll-bottom">
        </p>
      </div>    
    </div><!-- member -->   
  </div><!-- warp -->

<script type="text/javascript"> 
$(function(){ 
  $(".scroll-top").click(function(){    
    $('html, body').animate({scrollTop: $(".member-container").offset().top-130}, 900);
    return false;
  });
   $(".scroll-bottom").click(function(){
    $("html,body").animate({scrollTop:0},900);
    return false;
  });   
  $( ".member-title-btn" ).click(function() {
    $( ".member-title" ).slideToggle( "" );
  });
});
</script>
{{ footer }}