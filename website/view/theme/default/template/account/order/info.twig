{{ header }}
 <div class="warp">
    <div class="member">
      <div class="title">
        <img src="images/member-title.png" alt="" class="fadeInUp wow" data-wow-delay=".1s">
        <p class="new-title">
          <img src="images/member-img.png" alt="" class="fadeInUp wow" data-wow-delay=".3s">
        </p>
      </div>
      <div class="new-slide">
        <div class="slide-block">
          <img src="images/slide.png" alt="" class="slide-pc scroll-top fadeInUp wow" data-wow-delay=".5s">
          <img src="images/i-slide.svg" alt="" class="slide-mobile scroll-top">
          <p><img src="images/about-slide-before.png" alt="" class="fadeInUp wow" data-wow-delay=".7s"></p>         
        </div>
      </div>  
      <!--  -->
      <div class="member-container fadeInUp" data-wow-delay=".9s">
        <div class="member-title-btn">
          <p>MENU</p>
          <i class="fa fa-list-ul" aria-hidden="true"></i>
        </div>
        <div class="member-title">
          {% for k,menu in account_menu %}
            <a href="{{ menu.href }}"{% if k==3 %} class="member-title-active" {% endif %}>{{ menu.name }}</a>
          {% endfor %}
        </div>
        <div class="order-div">
          <div class="order-table clearfix">
            <div>
                <table class="table table-bordered">
                  <thead>
                    <tr style="border-bottom:3px solid #e4e7ea;">
                      <td class="text-left">{{ column_name }}</td>
                      <td class="text-left">{{ column_model }}</td>
                      <td class="text-right">{{ column_quantity }}</td>
                      <td class="text-right">{{ column_price }}</td>
                      <td class="text-right">{{ column_total }}</td>
                    </tr>
                  </thead>
                  <tbody>
                  {% for producs in order_data %}
                    <tr>
                      <td class="text-left">{{ producs.name }}</td>
                      <td class="text-left">{{ producs.model }}</td>
                      <td class="text-right">{{ producs.quantity }}</td>
                      <td class="text-right">{{ producs.price }}</td>
                      <td class="text-right">{{ producs.total }}</td>
                    </tr>
                  {% endfor %}
                  {% for total in price_data %}
                    <tr>
                      <td colspan="4" class="text-right">{{ total.title }}</td>
                      <td class="text-right">{{ total.value }}</td>
                    </tr>
                  {% endfor %}
                  </tbody>            
                </table>
            </div>

          </div>
        </div>
      </div>
      <!--  -->
      <div class="new-slide-bottom clearfix">
        <p><img src="images/about-slide-before.png" alt="" class="fadeInUp wow" data-wow-delay=".1s"></p>
        <p><img src="images/member-img.png" alt="" class="fadeInUp wow" data-wow-delay=".2s"></p>
        <p>
          <img src="images/i-slide-bottom.png" alt="" class=" slide-pc scroll-bottom fadeInUp wow" data-wow-delay=".3s">
          <img src="images/i-slide-bottom.svg" alt="" class="slide-mobile scroll-bottom">
        </p>
      </div>    
    </div><!-- member -->   
  </div><!-- warp -->
<script type="text/javascript"> 
$(function(){ 
  $(".scroll-top").click(function(){    
    $('html, body').animate({scrollTop: $(".member-container").offset().top-130}, 900);
    return false;
  });
   $(".scroll-bottom").click(function(){
    $("html,body").animate({scrollTop:0},900);
    return false;
  });   
   $( ".member-title-btn" ).click(function() {
    $( ".member-title" ).slideToggle( "" );
  });
});
</script>

{{ footer }}