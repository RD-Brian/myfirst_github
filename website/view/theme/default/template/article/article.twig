{{ header }}
  <div class="warp">
    <div class="new">
      <div class="title">
        <img src="images/new-title.png" alt="" class="fadeInUp wow" data-wow-delay=".1s">
        <p class="new-title">
          <img src="images/new-img.png" alt="" class="fadeInUp wow" data-wow-delay=".3s">
        </p>
      </div>
      <div class="new-slide">
        <div class="slide-block">
          <img src="images/slide.png" alt="" class="slide-pc scroll-top fadeInUp wow" data-wow-delay=".5s">
          <img src="images/i-slide.svg" alt="" class="slide-mobile scroll-top">
          <p>
            <img src="images/about-slide-before.png" alt="" class=" fadeInUp wow" data-wow-delay=".7s">           
          </p>          
        </div>
      </div>
      <div class="new-category clearfix">
        <div class="new-date-block clearfix">
          <div class="new-date fadeInUp wow" data-wow-delay=".9s">
            <h1>{{ month }}.</h1>
            <h2>{{ day }}</h2>
            <span class="swiper-good-thing-div-line"></span>
                <span class="swiper-new-span">{{ weekday }}<span>
          </div>
          <div class="new-category-title fadeInUp wow" data-wow-delay="1s">
            {{ title }}
          </div>
        </div>
        <div class="new-category-img-block">
          <img src="{{ image }}" alt="">
          <div class="new-category-txt">
            <p class="article-title">作者 {{ writer }} 。 {{ date_added }}</p>
            <p class="fadeInUp wow" data-wow-delay=".1s">{{ description }}</p>
          </div>
        </div>
      </div>
      <div class="new-slide-bottom clearfix">
        <p><img src="images/about-slide-after.png" alt="" class="fadeInUp wow" data-wow-delay=".1s"></p>
        <p><img src="images/new-img.png" alt="" class="fadeInUp wow" data-wow-delay=".2s"></p>
        <p><img src="images/i-slide-bottom.png" alt="" class="slide-pc scroll-bottom fadeInUp wow" data-wow-delay=".3s">
        <img src="images/i-slide-bottom.svg" alt="" class="slide-mobile scroll-bottom">
        </p>
      </div>
    </div><!-- new --> 
  </div><!-- warp -->
<script type="text/javascript"> 
$(function(){ 
  $(".scroll-top").click(function(){    
    $('html, body').animate({scrollTop: $(".new-category").offset().top -130}, 900);
    return false;
  });
   $(".scroll-bottom").click(function(){
    $("html,body").animate({scrollTop:0},900);
    return false;
  });   
});
</script>

